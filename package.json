{
  "name": "somabuddy-monorepo",
  "version": "1.0.0",
  "description": "SomaBuddy - Dyslexia-friendly reading app for Kenyan children",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "start": "concurrently \"pnpm --filter server start\" \"pnpm --filter client dev\""
  },
  "keywords": ["dyslexia", "education", "kenya", "reading"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "turbo": "^2.5.6",
    "concurrently": "^8.2.2"
  }
}
